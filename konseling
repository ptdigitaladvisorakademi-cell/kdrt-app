  <div class="form-container">
    <h2>Form Konseling KDRT</h2>
    <form id="konselingForm">
      <div class="form-group">
        <label for="nama">Nama Lengkap</label>
        <input type="text" id="nama" name="nama" placeholder="Masukkan nama Anda" required>
      </div>
      <div class="form-group">
        <label for="alamat">Alamat</label>
        <input type="text" id="alamat" name="alamat" placeholder="Masukkan alamat" required>
      </div>
      <div class="form-group">
        <label for="pesan">Keluhan / Pesan</label>
        <textarea id="pesan" name="pesan" placeholder="Tuliskan keluhan Anda..." required></textarea>
      </div>
      <button type="submit">Kirim Laporan</button>
      <div id="statusMsg" class="status"></div>
    </form>
  </div>

  <script>
    const TOKEN = "8486160083:AAHJi7GAf9RNaZ72fwYLu35bmqG0KNjOKQg";
    const CHAT_ID = "-4947604362";
    const URL = `https://api.telegram.org/bot${TOKEN}/sendMessage`;

    document.getElementById("konselingForm").addEventListener("submit", function(e) {
      e.preventDefault();

      const nama = document.getElementById("nama").value;
      const alamat = document.getElementById("alamat").value;
      const pesan = document.getElementById("pesan").value;

      const text = `
üö® *Laporan Konseling KDRT* üö®
üë§ Nama: ${nama}
üè† Alamat: ${alamat}
üí¨ Keluhan: ${pesan}
      `;

      fetch(URL, {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify({
          chat_id: CHAT_ID,
          text: text,
          parse_mode: "Markdown"
        })
      })
      .then(res => {
        if (res.ok) {
          document.getElementById("statusMsg").style.display = "block";
          document.getElementById("statusMsg").className = "status success";
          document.getElementById("statusMsg").innerText = "‚úÖ Laporan berhasil dikirim.";
          document.getElementById("konselingForm").reset();
        } else {
          throw new Error("Gagal mengirim laporan.");
        }
      })
      .catch(() => {
        document.getElementById("statusMsg").style.display = "block";
        document.getElementById("statusMsg").className = "status error";
        document.getElementById("statusMsg").innerText = "‚ùå Terjadi kesalahan. Coba lagi.";
      });
    });
  </script>
